#!/bin/bash
export templdpath=$LD_LIBRARY_PATH
export LD_LIBRARY_PATH=./linux64:$LD_LIBRARY_PATH
export SteamAppId=892970
./valheim_server.x86_64 -name "{{ valheim_server_name }}" -port {{ valheim_server_port }} -world "{{ valheim_server_world }}" -password "{{ valheim_server_passwd }}" -savedir "{{ valheim_server_savedir }}" -public {{ valheim_server_vis }}
export LD_LIBRARY_PATH=$templdpath
